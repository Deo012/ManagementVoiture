<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
</head>
<body>
    <header>
        @Html.ActionLink("Dream Cars", "Acceuil", "Home", new { area = "" }, new { @class = "logo" })
        <ul class="navmenu">
            <li>@Html.ActionLink("Home", "Acceuil", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li>@Html.ActionLink("Voitures", "ListeVoiture", "Home")</li>
        </ul>

        <div class="nav-right">
            <a href="#" class="nav-btn">Register</a>
            <div class="bx bx-menu" id="menu-icon"></div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer >
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="~/Content/bootstrap"/>
    <script src="~/bundles/jquery"/>
    @RenderSection("scripts", required: false)
</body>
</html>
